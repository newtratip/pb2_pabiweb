<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.exp.dao.ExpUseDtlDAO">
    <resultMap id="result" type="expUseDtlModel">
        <result property="id" column="id"/>
        <result property="masterId" column="master_id"/>
        <result property="activityId" column="activity_id"/>
        <result property="activityName" column="activity_name"/>
        <result property="condition1" column="condition_1"/>
        <result property="condition2" column="condition_2"/>
        <result property="position" column="position"/>
        <result property="uom" column="uom"/>
        <result property="amount" column="amount"/>
        <result property="createdTime" column="created_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="updatedBy" column="updated_by"/>
    </resultMap>
    
    <select id="list" resultMap="result" parameterType="map">
    
        SELECT
		    d.*, COUNT(*) OVER() totalRowCount,
		    a.name activity_name
		FROM
		    pb2_exp_use_dtl d
		    left join pb2_ext_account_activity a on d.activity_id=a.id 
		WHERE 1=1
		<if test="masterId != null">
			AND master_id=#{masterId}
		</if>			
		<if test="cond1 != null">
			AND condition_1=#{cond1}
		</if>			
		<if test="cond2 != null">
			AND condition_2=#{cond2}
		</if>			
		<if test="position != null">
			AND position=#{position}
		</if>			
		<if test="uom != null">
			AND uom=#{uom}
		</if>			
		ORDER BY id
		
    </select>
    
    <insert
		id="add"
		parameterType="expUseDtlModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="id"
		useGeneratedKeys="true"
		>
	    INSERT INTO pb2_exp_use_dtl(
	    	master_id
	    	,activity_id
	    	,condition_1
	    	,condition_2
	    	,position
	    	,uom
	    	,amount
	    	,created_by,updated_by
	    )VALUES( 
    		#{masterId}
    		,#{activityId}
    		,#{condition1}
    		,#{condition2}
    		,#{position}
    		,#{uom}
    		,#{amount}
    		,#{createdBy},#{updatedBy}
    	)
		
	</insert>
	
	<select id="count"  resultType="long">
        SELECT
		    count(1)
		FROM
		    pb2_exp_use_dtl
	
    </select>
	
	<delete id="delete"
    		parameterType="long"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_exp_use_dtl WHERE id=#{id}
	</delete>
	
	<delete id="deleteByMasterId"
    		parameterType="string"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_exp_use_dtl WHERE master_id=#{masterId}
	</delete>
	
    <select id="get" parameterType="long" resultMap="result">
        SELECT
		    *
		FROM
		    pb2_exp_use_dtl
		WHERE id=#{id}
    </select>
    
    <select id="listForInf" resultType="map" parameterType="map">
		select 
			d.description, 
			d.quantity, 
			u.id unit_id,
			r.budget_cc,
			r.cost_control_id,
			t.name vat_name,
			price_cnv,
			d.updated_time
		from pb2_exp_use_dtl d left join pb2_ext_product_uom u on d.unit = u.name
		left join pb2_pcm_req r on r.id = d.master_id
		left join pb2_ext_account_tax t on r.vat_id = t.id
		where master_id = #{id}
		ORDER BY d.id
    </select>

</mapper>