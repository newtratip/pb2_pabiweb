<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.exp.dao.ExpBrwDtlDAO">
    <resultMap id="result" type="expBrwDtlModel">
        <result property="id" column="id"/>
        <result property="masterId" column="master_id"/>
        <result property="activity" column="activity"/>
        <result property="amount" column="amount"/>
        <result property="createdTime" column="created_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="updatedBy" column="updated_by"/>
    </resultMap>
    
    <select id="list" resultMap="result" parameterType="map">
    
        SELECT
		    d.*, COUNT(*) OVER() totalRowCount
		FROM
		    pb2_exp_brw_dtl d
		WHERE 1=1
		<if test="masterId != null">
			AND master_id=#{masterId}
		</if>			
		ORDER BY id
		
    </select>
    
    <insert
		id="add"
		parameterType="expBrwDtlModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="id"
		useGeneratedKeys="true"
		>
	    INSERT INTO pb2_exp_brw_dtl(
	    	master_id
	    	,activity
	    	,amount
	    	,created_by,updated_by
	    )VALUES( 
    		#{masterId}
    		,#{activity}
    		,#{amount}
    		,#{createdBy},#{updatedBy}
    	)
		
	</insert>
	
	<select id="count"  resultType="long">
        SELECT
		    count(1)
		FROM
		    pb2_exp_brw_dtl
	
    </select>
	
	<delete id="delete"
    		parameterType="long"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_exp_brw_dtl WHERE id=#{id}
	</delete>
	
	<delete id="deleteByMasterId"
    		parameterType="string"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_exp_brw_dtl WHERE master_id=#{masterId}
	</delete>
	
    <select id="get" parameterType="long" resultMap="result">
        SELECT
		    *
		FROM
		    pb2_exp_brw_dtl
		WHERE id=#{id}
    </select>
    
    <select id="listForInf" resultType="map" parameterType="map">
		select 
			d.activity, 
			d.amount, 
			r.budget_cc,
			r.cost_control_id,
			d.updated_time
		from pb2_exp_brw_dtl d 
		left join pb2_exp_brw r on r.id = d.master_id
		where master_id = #{id}
		ORDER BY d.id
    </select>

</mapper>