<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.pcm.dao.PcmReqDtlDAO">
    <resultMap id="result" type="pcmReqDtlModel">
        <result property="id" column="id"/>
        <result property="masterId" column="master_id"/>
        <result property="isEquipment" column="is_equipment"/>
        <result property="description" column="description"/>
        <result property="quantity" column="quantity"/>
        <result property="unit" column="unit"/>
        <result property="price" column="price"/>
        <result property="priceCnv" column="price_cnv"/>
        <result property="total" column="total"/>
        <result property="createdTime" column="created_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="updatedBy" column="updated_by"/>
    </resultMap>
    
    <select id="list" resultMap="result" parameterType="map">
    
        SELECT
		    *, COUNT(*) OVER() totalRowCount
		FROM
		    pb2_pcm_req_dtl
		WHERE 1=1
		<if test="masterId != null">
			AND master_id=#{masterId}
		</if>			
		<if test="desc != null">
			AND description=#{desc}
		</if>			
		ORDER BY id
		
    </select>
    
    <insert
		id="add"
		parameterType="pcmReqDtlModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="id"
		useGeneratedKeys="true"
		>
	    INSERT INTO pb2_pcm_req_dtl(
	    	master_id
	    	,is_equipment
	    	,description
	    	,quantity
	    	,unit
	    	,price
	    	,price_cnv
	    	,total
	    	,created_by,updated_by
	    )VALUES( 
    		#{masterId}
    		,#{isEquipment}
    		,#{description}
    		,#{quantity}
    		,#{unit}
    		,#{price}
    		,#{priceCnv}
    		,#{total}
    		,#{createdBy},#{updatedBy}
    	)
		
	</insert>
	
	<select id="count"  resultType="long">
        SELECT
		    count(1)
		FROM
		    pb2_pcm_req_dtl
	
    </select>
	
	<delete id="delete"
    		parameterType="long"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_pcm_req_dtl WHERE id=#{id}
	</delete>
	
	<delete id="deleteByMasterId"
    		parameterType="string"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_pcm_req_dtl WHERE master_id=#{masterId}
	</delete>
	
    <select id="get" parameterType="long" resultMap="result">
        SELECT
		    *
		FROM
		    pb2_pcm_req_dtl
		WHERE id=#{id}
    </select>
    
    <select id="listForInf" resultType="map" parameterType="map">
		select 
			d.description, 
			d.quantity, 
			u.id unit_id,
			r.budget_cc,
			r.cost_control_id,
			t.name vat_name,
			price_cnv,
			d.updated_time
		from pb2_pcm_req_dtl d left join pb2_ext_product_uom u on d.unit = u.name
		left join pb2_pcm_req r on r.id = d.master_id
		left join pb2_ext_account_tax t on r.vat_id = t.id
		where master_id = #{id}
		ORDER BY d.id
    </select>
    
</mapper>